# 基本配置
# 后端监听端口（可选，默认 3000）
PORT=3000

# 云雾 API 配置
YUN_API_URL=https://yunwu.ai/v1/chat/completions
YUN_API_KEY=YOUR_YUN_API_KEY_HERE

# 调试日志（1 或 true 开启）
DEBUG_LOG=0
DEBUG=false

# SMTP 邮件配置（用于每日使用日志汇总邮件）
# 必填：MAIL_HOST, MAIL_PORT, MAIL_USER, MAIL_PASS, MAIL_TO
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=bot@example.com
MAIL_PASS=YOUR_SMTP_PASSWORD
MAIL_FROM=bot@example.com
MAIL_TO=admin1@example.com,admin2@example.com

# 邮件发送定时（CRON 表达式），默认每日 23:55
MAIL_CRON=55 23 * * *
